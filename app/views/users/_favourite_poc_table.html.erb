<% if @favourite_pocs.present? %>
  <table class="striped responsive-table tables-data favourite-poc-data">
    <tr>
      <th>No.</th>
      <th>Name <%= sorting_link("name", "favourite_poc") %></th>
      <th>Downloads <%= sorting_link("no_of_downloads", "favourite_poc") %></th>
      <th>Views <%= sorting_link("impressions", "favourite_poc") %></th>
      <th>Favourites <%= sorting_link("favourites", "favourite_poc") %></th>
    </tr>

    <% @favourite_pocs.each_with_index do |poc, index| %>
    <tr>
      <td><%= serial_no(params[:favourite_poc_page], index) %></td>
      <td><%= poc.name %></td>
      <td><%= poc.no_of_downloads.to_i %></td>
      <td><%= poc.impressions.count.to_i %></td>
      <td><%= poc.favourites.count.to_i %></td>
    </tr>
    <% end %>
  </table>
  <div class="tables-paging center-align">
    <%= will_paginate @favourite_pocs, param_name: 'favourite_poc_page',
      previous_label: pagination[:previous_label],
      next_label: pagination[:next_label]  %>
  </div>
<% else %>
  <h6 class="no-record">No Records found</h6>
<% end %>
<script>
  $('.tooltipped').tooltip({delay: 50});
</script>
