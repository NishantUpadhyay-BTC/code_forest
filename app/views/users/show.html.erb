<div class="row repo-show white">
  <%= current_user.email %>
  <div class="container z-depth-1">
    <% if @pocs.present? %>
    <table class="highlight para-text dash-table">
      <thead>
        <tr>
          <th>No.</th>
          <th data-field="id">Name</th>
          <th data-field="price">Downloads</th>
          <th data-field="price">Views</th>
          <th data-field="price">Favourites</th>
          <th data-field="price">Show/Hide</th>

        </tr>
      </thead>

      <tbody>
        <td><%= @pocs.pluck(:name) %></td>
        <% @pocs.each.with_index do |poc, index| %>
        <tr>

          <td><%= index + 1 %></td>
          <td><%= poc.name %></td>
          <td><%= poc.no_of_downloads %></td>
          <td><%= poc.impressions.count %></td>
          <td><%= poc.favourites.count %></td>
          <td>
            <div class="switch">
              <label>
                <input type="checkbox">
                <span class="lever"></span>
              </label>
            </div>
          </td>
          <td data-field="price">
            <%= link_to edit_repository_path(poc.id) do %>
            <i class="material-icons">mode_edit</i>
            <% end %>
            <%= link_to repository_path(poc.id), method: :delete, data: { confirm: 'Are you sure?' } do %>
            <i class="material-icons">delete</i>
            <% end %>
          </td>
        </tr>
        <% end %>

      </tbody>
    </table>
    <% else %>
    <p>No POCs to show.</p>
    <% end %>
  </div>
  <br>
  <div class="container z-depth-1">
    <% if @repositories.present? %>
    <table class="highlight para-text dash-table">
      <thead>
        <tr>
          <th>No.</th>
          <th data-field="id">Name</th>
          <th data-field="price">Add Repo</th>
        </tr>
      </thead>

      <tbody>
        <% @repositories.each.with_index do |repo, index| %>
        <% unless @pocs.pluck(:name).include?(repo["name"]) %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= repo["name"] %></td>
          <td><%= link_to new_repository_path(user_name: current_user.name, repo_name: repo["name"]) do %>
          <i class="material-icons">mode_add</i><% end %>

        </tr>
        <% end %>
        <% end %>

      </tbody>
    </table>
    <% else %>
    <p>No repositories to create POC.</p>
    <% end %>
  </div>
</div>
