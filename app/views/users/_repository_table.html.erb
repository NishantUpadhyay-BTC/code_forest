<% if @repositories.present? %>
  <table class="striped responsive-table tables-data">
    <tr>
      <th>No.</th>
      <th>Name <%= sorting_link("name", "repo") %></th>
      <th>Add Repo</th>
    </tr>

    <% @repositories.each_with_index do |repo, index| %>
    <tr>
      <td><%= serial_no(params[:repo_page], index) %></td>
      <td><%= repo["name"] %></td>
      <td>
        <%= link_to new_repository_path(user_name: current_user.name, repo_name: repo["name"]), class: "tooltipped", data: { turbolinks: false, position: 'top', delay: '50', tooltip: "Add repository" } do %>
          <i class="material-icons">mode_add</i>
        <% end %>
      </td>
    </tr>
    <% end %>
  </table>
  <div class="tables-paging center-align">
    <%= will_paginate @repositories, param_name: 'repo_page',
      previous_label: pagination[:previous_label],
      next_label: pagination[:next_label] %>
  </div>
<% else %>
  <h6 class="no-record">No Records found</h6>
<% end %>
<script>
  $('.tooltipped').tooltip({delay: 50});
</script>
