<% if @repositories.present? %>
<table class="highlight para-text dash-table">
  <thead>
    <tr>
      <th>No.</th>
      <th data-field="id">Name</th>
      <th data-field="price">Add Repo</th>
    </tr>
  </thead>

  <tbody>
    <% index = 1 %>
    <% @repositories.each do |repo| %>
    <% #unless @pocs.pluck(:name).include?(repo["name"]) %>
    <tr>
      <td><%= index %></td>
      <td><%= repo["name"] %></td>
      <td>
        <%= link_to new_repository_path(user_name: current_user.name, repo_name: repo["name"]) do %>
        <i class="material-icons">mode_add</i>
        <% end %>
        <% index+=1 %>
      </td>
    </tr>
    <% #end %>
    <% end %>

  </tbody>
</table>
<%= will_paginate @repositories, param_name: 'repo_page' %>
<% else %>
<b>No repositories to create POC.</b>
<% end %>
